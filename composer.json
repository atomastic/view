{
    "name": "atomastic/view",
    "description": "View Component provides basic methods for displaying PHP views.",
    "license": "MIT",
    "keywords": [
        "View", "view", "php-view", "php", "atomastic"
    ],
    "support": {
      "source": "https://github.com/atomastic/view",
      "issues": "https://github.com/atomastic/view/issues"
    },
    "authors": [
        {
            "name": "Sergey Romanenko",
            "email": "sergey.romanenko@flextype.org",
            "homepage": "https://github.com/Awilum"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-spl": "*",
        "ext-fileinfo": "*",
        "atomastic/macroable": "^2.0",
        "atomastic/strings": "^3.0",
        "atomastic/filesystem": "^2.1"
    },
    "autoload":{
        "psr-4": {
            "Atomastic\\View\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "require-dev": {
        "doctrine/coding-standard": "9.0.0",
        "pestphp/pest": "^1.12.0",
        "phpstan/phpstan": "^0.12.94",
        "symfony/var-dumper": "^5.3.6"
    }
}
